<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkSilver"
    tools:context=".login_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/back_btn_circle"
            android:elevation="5dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="-40dp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:transitionName="backIcon"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:background="@drawable/ic_baseline_arrow_back_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/backBtn"
                android:layout_centerVertical="true"
                android:text="Back"
                android:textColor="@color/black"
                android:transitionName="backTxt"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/login_txt_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/backBtn"
                android:layout_centerHorizontal="true"
                android:text="Login"
                android:transitionName="Sign_up"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                />

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentBottom="true"
            android:transitionName="red_back"
            android:elevation="10dp"
            android:background="@drawable/rectangle_down"
            android:orientation="vertical">


            <TextView
                android:id="@+id/login_txt_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textStyle="bold"
                android:transitionName="SignUpLogo"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="38sp"/>

            <TextView
                android:id="@+id/already_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in to continue"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:transitionName="description_login"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"

                android:layout_gravity="center">

                <TextView
                    android:id="@+id/Name_txt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:transitionName="emailTxt"
                    android:text="Email"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/email_box_login"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="example.123@gmail.com"
                    android:textColor="@color/white"
                    android:transitionName="emailBox"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#757575"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_design"/>

                <TextView
                    android:id="@+id/password_txt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:transitionName="passwordTxt"
                    android:textSize="14sp"
                    android:text="Password"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/password_box_login"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="***********"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:transitionName="PwdBox"
                    android:textColorHint="#757575"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_design"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sign_inBtn"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:transitionName="LoginBtn"
                    android:text="Login"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/forgotpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:transitionName="forgotPwd"
                    android:textSize="14sp"
                    android:text="Forgot password?"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/register_txt"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Register here"
                    android:textColor="@color/black"
                    android:background="#00000000"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:transitionName="RegisterHere"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>